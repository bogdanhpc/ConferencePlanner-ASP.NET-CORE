@page "{id}"
@model EditSpeakerModel


<h3>Edit Speaker</h3>

@if (Model.ShowMessage)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>   </button>
        @Model.Message
    </div>
}

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Speaker.Id" type="hidden" />
    <input asp-for="Speaker.Name" type="hidden" />
    <div class="form-group">
        <label asp-for="Speaker.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Speaker.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Speaker.Bio" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Speaker.Bio" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Speaker.WebSite" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Speaker.WebSite" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}